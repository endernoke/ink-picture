{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "es2022",
    "moduleResolution": "bundler",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["build", "node_modules", "test", "example"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true,
    "experimentalSpecifierResolution": "node"
  }
}
